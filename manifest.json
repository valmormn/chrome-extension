{
  "version": "1.0",
  "manifest_version": 2,
  "name": "Chrome Extension - Valmor",
  "description": "Minha Extens√£o!",
  "icons": {
    "16": "./src/assets/images/rocket16.png",
    "32": "./src/assets/images/rocket32.png",
    "48": "./src/assets/images/rocket48.png",
    "128": "./src/assets/images/rocket128.png"
  },
  "permissions": ["activeTab", "tabs", "contextMenus", "declarativeContent", "storage"],
  "omnibox": { "keyword" : "v" },
  "chrome_url_overrides" : {
    "newtab": "./src/override/override.html"
  },
  "options_page": "./src/options/options.html",
  "browser_action": {
    "default_title": "Awesome Browser",
    "default_popup": "./src/popup/popup.html",
    "default_icon": {
      "16": "./src/assets/images/rocket16.png",
      "32": "./src/assets/images/rocket32.png",
      "48": "./src/assets/images/rocket48.png",
      "128": "./src/assets/images/rocket128.png"
    }
  },
  "background": {
    "scripts": [
      "./background.js",
      "./src/js/defaults.js"
    ],
    "persistent": false
  },
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": ["./content.js"]
  }],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "MacCtrl+Shift+V"
      },
      "description": "Opens default_popup = popup.html"
    }
  }
}
