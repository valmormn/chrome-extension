{
  "version": "1.0",
  "manifest_version": 2,
  "name": "Chrome Extension - Valmor",
  "description": "Minha Extens√£o!",
  "permissions": ["activeTab", "tabs", "contextMenus", "declarativeContent", "storage"],
  "omnibox": { "keyword" : "v" },
  "options_page": "./src/options/options.html",
  "browser_action": {
    "default_title": "Awesome Browser",
    "default_popup": "./src/popup/popup.html",
    "default_icon": {
      "16": "./src/assets/images/rocket16.png",
      "32": "./src/assets/images/rocket32.png",
      "48": "./src/assets/images/rocket48.png",
      "128": "./src/assets/images/rocket128.png"
    }
  },
  "background": {
    "scripts": [
      "./background.js",
      "./src/js/defaults.js"
    ],
    "persistent": false
  },
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": ["./content.js"]
  }],
  "icons": {
    "16": "./src/assets/images/rocket16.png",
    "32": "./src/assets/images/rocket32.png",
    "48": "./src/assets/images/rocket48.png",
    "128": "./src/assets/images/rocket128.png"
  }
}